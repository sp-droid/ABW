	animation = { id = "move_start" 	type = "war_galleon_move_start.anim" }
	animation = { id = "moving" 		type = "war_galleon_move.anim" }
	animation = { id = "combat" 		type = "war_galleon_combat.anim" }


	meshsettings = {
